<h1>Listing images</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>Format</th>
      <th>Width</th>
      <th>Height</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.file_name %></td>
        <td><%= image.format %></td>
        <td><%= image.width %></td>
        <td><%= image.height %></td>
        <td>
          <img width ="100" src='<%=Rails.application.config.shot_file_url+"/" + image.file_name%>'/>

        </td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

